{
    "[lua]": {
        "editor.defaultFormatter": "Koihik.vscode-lua-format",
        "editor.formatOnSave": true,
    },
    "[xml]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
    },
    "files.eol": "\n",
    "files.exclude": { "release/": true },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": { "release/**": true },
    "lua.preferLuaCheckErrors": true,
    "lua.targetVersion": "5.3",
    "vscode-lua-format.binaryPath": ".vscode/lua-format-wrapper"
}
